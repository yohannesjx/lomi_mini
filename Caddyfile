# Caddyfile for Lomi Social
# Place this in /etc/caddy/Caddyfile on your server
# Server IP: 152.53.87.200
#
# DNS Configuration (Optional - works with IP too):
# A     lomi.social        → 152.53.87.200
# A     api.lomi.social    → 152.53.87.200
#
# This config works with:
# - Domain names (when DNS is configured) → Automatic SSL
# - IP address (152.53.87.200) → Works immediately, no SSL

# HTTP-only block for IP address (no SSL)
# Use this when accessing via IP: http://152.53.87.200
:80 {
    # Handle preflight OPTIONS requests FIRST
    @options {
        method OPTIONS
        path /api/*
    }
    handle @options {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
            Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
            Access-Control-Max-Age "3600"
        }
        respond 204
    }
    
    # Handle API requests (MUST come before static file serving)
    handle /api/* {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Handle WebSocket
    handle /ws {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Handle frontend (SPA - only for non-API routes)
    handle {
        root * /var/www/lomi-frontend
        try_files {path} /index.html
        file_server
    }
    
    # Global headers (applied to all responses)
    header {
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
    }
    
    encode gzip zstd
}

# Domain-based blocks (automatic HTTPS/SSL)
# Use this when DNS is configured: https://lomi.social
lomi.social, local.lomi {
    # Handle preflight OPTIONS requests FIRST (before API reverse_proxy)
    @options {
        method OPTIONS
        path /api/*
    }
    handle @options {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
            Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
            Access-Control-Max-Age "3600"
        }
        respond 204
    }
    
    # Handle API requests (MUST come before static file serving)
    handle /api/* {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Handle WebSocket
    handle /ws {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Serve static files (SPA - only for non-API routes)
    handle {
        root * /var/www/lomi-frontend
        try_files {path} /index.html
        file_server
    }
    
    # Global headers (applied to all responses)
    header {
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
    }
    
    # Compression
    encode gzip zstd
}

# Backend API (domain only - automatic HTTPS)
# Access via: https://api.lomi.social/api/v1/health
# For IP access, use the :80 block above with /api/* path
api.lomi.social {
    # Handle WebSocket first
    handle /ws {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
        }
    }
    
    # Handle API requests
    handle /api/* {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            
            # Health check
            health_uri /api/v1/health
            health_interval 30s
            health_timeout 5s
        }
    }
    
    # CORS headers
    header {
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials "true"
    }
    
    # Handle preflight requests
    @options {
        method OPTIONS
    }
    handle @options {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
            Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
            Access-Control-Max-Age "3600"
        }
        respond 204
    }
    
    # Compression
    encode gzip zstd
}

