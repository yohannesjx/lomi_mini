# Caddyfile for Lomi Social
# Server IP: 152.53.87.200
# 
# NOTE: If Caddy hangs on reload, it's likely trying to get SSL certificates.
# Solution: Use 'systemctl restart caddy' instead of 'reload'

# HTTP-only block for IP address (no SSL - won't hang)
:80 {
    # Handle preflight OPTIONS requests FIRST
    @options {
        method OPTIONS
        path /api/*
    }
    handle @options {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
            Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
            Access-Control-Max-Age "3600"
        }
        respond 204
    }
    
    # Handle API requests (MUST come before static file serving)
    handle /api/* {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Handle WebSocket
    handle /ws {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Serve static files (SPA - only for non-API routes)
    handle {
        root * /var/www/lomi-frontend
        try_files {path} /index.html
        file_server
    }
    
    # Global headers
    header {
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        X-Content-Type-Options "nosniff"
        # Allow popups for Firebase OAuth (same-origin-allow-popups)
        X-Frame-Options "SAMEORIGIN"
        Cross-Origin-Opener-Policy "same-origin-allow-popups"
        Cross-Origin-Embedder-Policy "unsafe-none"
        X-XSS-Protection "1; mode=block"
    }
    
    # Compression
    encode gzip zstd
}

# Domain-based block (automatic HTTPS/SSL)
# WARNING: This can hang if DNS isn't ready or Let's Encrypt is rate-limited
# If reload hangs, comment out this block temporarily
lomi.social, local.lomi {
    # Use self-signed certificates to avoid Let's Encrypt delays
    # Remove this once DNS is stable and you want real SSL
    tls internal
    
    # Handle preflight OPTIONS requests FIRST
    @options {
        method OPTIONS
        path /api/*
    }
    handle @options {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
            Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
            Access-Control-Max-Age "3600"
        }
        respond 204
    }
    
    # Handle API requests (MUST come before static file serving)
    handle /api/* {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
            # NO health checks - they can cause hangs if backend isn't ready
        }
    }
    
    # Handle WebSocket
    handle /ws {
        reverse_proxy localhost:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Serve static files (SPA - only for non-API routes)
    handle {
        root * /var/www/lomi-frontend
        try_files {path} /index.html
        file_server
    }
    
    # Global headers
    header {
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        X-Content-Type-Options "nosniff"
        # Allow popups for Firebase OAuth (same-origin-allow-popups)
        X-Frame-Options "SAMEORIGIN"
        Cross-Origin-Opener-Policy "same-origin-allow-popups"
        Cross-Origin-Embedder-Policy "unsafe-none"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
    }
    
    # Compression
    encode gzip zstd
}
